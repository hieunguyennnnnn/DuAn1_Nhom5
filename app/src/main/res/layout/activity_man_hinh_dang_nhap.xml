<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/main"
    android:background="#F8F8F8"
    tools:context=".ManHinhDangNhap">


    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_gravity="start"
        android:padding="8dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textColor="#2A6E76"
        android:layout_gravity="center_vertical"
        android:paddingTop="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15px"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập để tiếp tục sử dụng ứng dụng"
        android:textSize="18sp"
        android:textColor="#7E7E7E"
        android:layout_gravity="center_vertical"
        android:paddingTop="8dp"
        android:textStyle="bold"
        android:paddingBottom="24dp"
        android:layout_marginLeft="15px"
        />

    <!-- Email Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_mail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="18sp"
        android:drawableStart="@drawable/icon_mail"
        android:drawablePadding="8dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- Password Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_matkhau"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:endIconMode="password_toggle"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="18sp"
            android:drawableStart="@drawable/icon_password"
            android:drawablePadding="8dp"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Forgot Password -->
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:textSize="14sp"
        android:textColor="#2A6E76"
        android:layout_gravity="end"
        android:paddingTop="8dp"
        android:paddingBottom="24dp"
        android:layout_marginEnd="18dp"/>

    <!-- Login Button -->

    <!-- Register Link -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#2A6E76"
        android:padding="12dp"
        android:layout_gravity="center"
        android:text="Đăng Nhập"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bạn chưa có tài khoản?"
            android:textSize="19sp"
            android:textColor="#7E7E7E"
            android:gravity="center"/>

        <TextView
            android:id="@+id/registerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Đăng ký ngay"
            android:textSize="18sp"
            android:textColor="#2A6E76"
            android:paddingStart="4dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
